{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "Desktop-Default",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "Debug",
      "hidden": true,
      "cacheVariables":{
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "binaryDir": "${sourceDir}/out/build/Debug"
    },
    {
      "name": "Release",
      "hidden": true,
      "cacheVariables":{
        "CMAKE_BUILD_TYPE": "Relase"
      },
      "binaryDir": "${sourceDir}/out/build/Release"
    },
    {
      "name": "GCC",
      "hidden": true,
      "cacheVariables":{
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "LLVM",
      "hidden": true,
      "cacheVariables":{
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "MSVC",
      "hidden": true,
      "cacheVariables":{
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      }
    },
    {
      "name": "OSX",
      "hidden": true,
      "inherits": "Desktop-Default",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "OSX-LLVM-Debug",
      "inherits": ["OSX", "LLVM", "Debug"]
    },
    {
      "name": "OSX-LLVM-Release",
      "inherits": ["OSX", "Release", "LLVM"]
    },
    {
      "name": "OSX-GCC-Debug",
      "inherits": ["OSX", "GCC", "Debug"]
    },
    {
      "name": "OSX-GCC-Release",
      "inherits": ["OSX", "GCC", "Release"]
    },

    {
      "name": "Windows",
      "inherits": "Desktop-Default",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "Windows-MSVC-Debug",
      "inherits": ["Windows", "MSVC", "Debug"]
    },
    {
      "name": "Windows-MSVC-Release",
      "inherits": ["Windows", "MSVC", "Release"]
    },
    {
      "name": "Linux",
      "inherits": "Desktop-Default",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "Linux-GCC-Debug",
      "inherits": ["Linux", "GCC", "Debug"]
    },
    {
      "name": "Linux-GCC-Release",
      "inherits": ["Linux", "GCC", "Release", "GCC"]
    },
    {
      "name": "Linux-LLVM-Debug",
      "inherits": ["Linux", "LLVM", "Debug"]
    },
    {
      "name": "Linux-LLVM-Release",
      "inherits": ["Linux", "LLVM", "Release"]
    }

  ]
}
