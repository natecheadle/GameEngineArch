{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "Desktop-Default",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
       "VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/cmake",
       "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "Debug",
      "hidden": true,
      "cacheVariables":{
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "binaryDir": "${sourceDir}/out/build/Debug"
    },
    {
      "name": "Release",
      "hidden": true,
      "cacheVariables":{
        "CMAKE_BUILD_TYPE": "Relase"
      },
      "binaryDir": "${sourceDir}/out/build/Release"
    },
        {
      "name": "MSVC",
      "hidden": true,
      "cacheVariables":{
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      }
    },
    {
      "name": "OSX",
      "hidden": true,
      "inherits": "Desktop-Default",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "OSX-LLVM-Debug",
      "inherits": ["OSX", "Debug"],
      "cacheVariables":{
        "VCPKG_TARGET_TRIPLET": "arm64-osx-llvm-17"
      }
    },
    {
      "name": "OSX-LLVM-Release",
      "inherits": ["OSX", "Release"],
      "cacheVariables":{
        "VCPKG_TARGET_TRIPLET": "arm64-osx-llvm-17"
      }
    },
    {
      "name": "OSX-GCC-Debug",
      "inherits": ["OSX", "Debug"],
      "cacheVariables":{
        "VCPKG_TARGET_TRIPLET": "arm64-osx-gcc-13"
      }
    },
    {
      "name": "OSX-GCC-Release",
      "inherits": ["OSX", "Release"],
      "cacheVariables":{
        "VCPKG_TARGET_TRIPLET": "arm64-osx-gcc-13"
      }
    },
    {
      "name": "Windows",
      "inherits": "Desktop-Default",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "Windows-MSVC-Debug",
      "inherits": ["Windows", "MSVC", "Debug"]
    },
    {
      "name": "Windows-MSVC-Release",
      "inherits": ["Windows", "MSVC", "Release"]
    },
    {
      "name": "Linux",
      "inherits": "Desktop-Default",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "Linux-GCC-Debug",
      "inherits": ["Linux", "Debug"],
      "cacheVariables":{
        "VCPKG_TARGET_TRIPLET": "x64-linux-gcc-13"
      }
    },
    {
      "name": "Linux-GCC-Release",
      "inherits": ["Linux", "Release"],
      "cacheVariables":{
        "VCPKG_TARGET_TRIPLET": "x64-linux-gcc-13"
      }
    },
    {
      "name": "Linux-LLVM-Debug",
      "inherits": ["Linux", "Debug"],
      "cacheVariables":{
        "VCPKG_TARGET_TRIPLET": "x64-linux-llvm-17"
      }
    },
    {
      "name": "Linux-LLVM-Release",
      "inherits": ["Linux", "Release"],
      "cacheVariables":{
        "VCPKG_TARGET_TRIPLET": "x64-linux-llvm-17"
      }
    }

  ]
}
