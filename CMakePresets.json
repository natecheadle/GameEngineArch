{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "Desktop-Default",
      "hidden": true,
      "displayName": "Default Config",
      "description": "Default build using Ninja generator",
      "generator": "Ninja",
      "toolchainFile": "${sourceDir}/../vcpkg/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/cmake",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "OSX-Only",
      "hidden": true,
      "inherits": "Desktop-Default",
      "displayName": "OSX-only configuration",
      "description": "This build is only available on OSX",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "OSX-LLVM",
      "hidden": true,
      "inherits": "OSX-Only",
      "displayName": "OSX-LLVM-Base",
      "description": "OSX Configuration Using LLVM",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "arm64-osx-llvm"
      }
    },
    {
      "name": "OSX-LLVM-Debug",
      "displayName": "Mac LLVM Debug Configuration",
      "inherits": "OSX-LLVM",
      "binaryDir": "${sourceDir}/out/build/Desktop/LLVM/Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_COVERAGE": "ON",
        "BGFX_TOOLS_BIN": "${sourceDir}/out/build/Desktop/LLVM/Debug/vcpkg_installed/arm64-osx-llvm/tools/bgfx/"
      }
    },
    {
      "name": "OSX-LLVM-Release",
      "displayName": "Mac LLVM Release Configuration",
      "inherits": "OSX-LLVM",
      "binaryDir": "${sourceDir}/out/build/Desktop/LLVM/Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_COVERAGE": "OFF",
        "BGFX_TOOLS_BIN": "${sourceDir}/out/build/Desktop/LLVM/Release/vcpkg_installed/arm64-osx-llvm/tools/bgfx/"
      }
    },
    {
      "name": "Windows-Only",
      "inherits": "Desktop-Default",
      "hidden": true,
      "displayName": "Windows-only configuration",
      "description": "This build is only available on Windows",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "Windows-MSVC",
      "inherits": "Windows-Only",
      "hidden": true,
      "displayName": "Windows-only configuration",
      "description": "This build is only available on Windows",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": {
          "type": "STRING",
          "value": "x64-windows"
        },
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      }
    },
    {
      "name": "Windows-MSVC-Debug",
      "displayName": "Windows MSVC Debug Configuration",
      "inherits": "Windows-MSVC",
      "binaryDir": "${sourceDir}/out/build/Desktop/MSVC/Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_COVERAGE": "OFF",
        "BGFX_TOOLS_BIN": "${sourceDir}/out/build/Desktop/MSVC/Debug/vcpkg_installed/x64-windows/tools/bgfx/"
      }
    },
    {
      "name": "Windows-MSVC-Release",
      "displayName": "Windows MSVC Release Configuration",
      "inherits": "Windows-MSVC",
      "binaryDir": "${sourceDir}/out/build/Desktop/MSVC/Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_COVERAGE": "OFF",
        "BGFX_TOOLS_BIN": "${sourceDir}/out/build/Desktop/MSVC/Release/vcpkg_installed/x64-windows/tools/bgfx/"
      }
    }
  ]
}