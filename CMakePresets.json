{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "Desktop-Default",
      "hidden": true,
      "displayName": "Default Config",
      "description": "Default build using Ninja generator",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "OSX",
      "hidden": true,
      "inherits": "Desktop-Default",
      "displayName": "OSX configuration",
      "description": "This build is only available on OSX",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "arm64-osx"
      }
    },
    {
      "name": "OSX-Debug",
      "displayName": "Mac Debug Configuration",
      "inherits": "OSX",
      "binaryDir": "${sourceDir}/out/build/Desktop/LLVM/Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "OSX-Release",
      "displayName": "Mac Release Configuration",
      "inherits": "OSX",
      "binaryDir": "${sourceDir}/out/build/Desktop/LLVM/Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "Windows",
      "inherits": "Desktop-Default",
      "hidden": true,
      "displayName": "Windows configuration",
      "description": "This build is only available on Windows",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "Windows-Debug",
      "displayName": "Windows Debug Configuration",
      "inherits": "Windows",
      "binaryDir": "${sourceDir}/out/build/Desktop/MSVC/Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "Windows-Release",
      "displayName": "Windows MSVC Release Configuration",
      "inherits": "Windows",
      "binaryDir": "${sourceDir}/out/build/Desktop/MSVC/Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "Linux",
      "inherits": "Desktop-Default",
      "hidden": true,
      "displayName": "Linux configuration",
      "description": "This build is only available on Linux",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      }
    },
    {
      "name": "Linux-Debug",
      "displayName": "Linux Debug Configuration",
      "inherits": "Linux",
      "binaryDir": "${sourceDir}/out/build/Desktop/GCC/Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "Linux-Release",
      "displayName": "Linux Release Configuration",
      "inherits": "Linux",
      "binaryDir": "${sourceDir}/out/build/Desktop/GCC/Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}
